            </item>
            <item android:bottom="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="#FFFFFFFF"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#FFEAEAEA"/>
                </shape>
            </item>
            <item android:bottom="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="#FFFFFFFF"/>
                </shape>
            </item>
        </layer-list>
    </item>
